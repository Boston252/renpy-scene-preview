{
  "name": "renpy-image-preview",
  "publisher": "Boston25",
  "displayName": "RenPy Image Preview",
  "description": "Muestra previsualizaciones de im√°genes en archivos RenPy",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:renpy"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "renpy",
        "aliases": [
          "RenPy",
          "renpy"
        ],
        "commands": [
        {
          "command": "renpyImagePreview.openInDefaultViewer",
          "title": "Abrir imagen con visor del sistema"
        },
        {
          "command": "renpyImagePreview.revealInExplorer",
          "title": "Mostrar imagen en explorador de archivos"
        }
      ],
        "extensions": [
          ".rpy"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "vsce": "^2.15.0"
  }
}
